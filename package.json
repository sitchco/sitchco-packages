{
    "name": "sitchco-packages",
    "version": "1.0.0",
    "private": true,
    "description": "Project root for all sitchco JS packages",
    "keywords": [],
    "license": "ISC",
    "author": "",
    "scripts": {
        "build": "sitchco build",
        "dev": "sitchco dev",
        "format": "sitchco format",
        "lint": "sitchco lint",
        "clean": "sitchco clean; find . -type d -name node_modules -prune -exec rm -rf {} \\;",
        "reset": "pnpm clean && pnpm install",
        "test": "pnpm -r test",
        "update:catalog": "npx pnpm-update-catalogs -L && pnpm install",
        "prepare": "sitchco prepare",
        "version": "pnpm changeset version",
        "release": "node scripts/release.js"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.7",
        "@sitchco/cli": "workspace:*",
        "@sitchco/eslint-config": "workspace:*",
        "@sitchco/prettier-config": "workspace:*"
    }
}
